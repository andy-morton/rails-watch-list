<div class="hero-image">
  <div class="hero-text">
    <h1>My Movie Lists</h1>
    <p>Pick a film</p>
    <%= link_to 'Create a list', new_list_path, {:style=> "btn btn-primary"} %>
  </div>
</div>



<div class="card-group">
    <% @lists.each do |list| %>
  <div class="card" style="width: 9rem">
      <%= cl_image_tag(list.photo.key, style: "width: 100%; height: 100%") %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe, list_path(list), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end  %>
  </div>
</div>
